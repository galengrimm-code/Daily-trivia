// firestore.rules
// Copy these rules to Firebase Console > Firestore > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      // Users can read any user profile (for leaderboard)
      allow read: if request.auth != null;
      
      // Users can only write their own profile
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Scores collection
    match /scores/{scoreId} {
      // Anyone authenticated can read scores (for leaderboard)
      allow read: if request.auth != null;

      // Users can only create their own scores
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid;

      // Scores cannot be updated or deleted (prevents cheating)
      allow update, delete: if false;
    }

    // Daily questions collection
    match /dailyQuestions/{date} {
      // Anyone authenticated can read today's questions
      allow read: if request.auth != null;

      // Anyone authenticated can create questions (first player of the day)
      // But cannot update or delete once created
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Settings collection (for trivia session token)
    match /settings/{document} {
      // Anyone authenticated can read settings
      allow read: if request.auth != null;

      // Anyone authenticated can write settings (for token management)
      allow write: if request.auth != null;
    }
  }
}
