// firestore.rules
// Copy these rules to Firebase Console > Firestore > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      // Users can read any user profile (for leaderboard)
      allow read: if request.auth != null;
      
      // Users can only write their own profile
      allow write: if request.auth != null && request.auth.uid == odLLuserId;
    }
    
    // Scores collection
    match /scores/{scoreId} {
      // Anyone authenticated can read scores (for leaderboard)
      allow read: if request.auth != null;
      
      // Users can only create their own scores
      allow create: if request.auth != null 
        && request.resource.data.odLLuserId == request.auth.uid;
      
      // Scores cannot be updated or deleted (prevents cheating)
      allow update, delete: if false;
    }
  }
}
